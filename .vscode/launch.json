{
    // Debug 6502 backend module
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) 6502",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/vasm6502_oldstyle",
            "args": [
                "-wdc02",
                "-Fbin",
                "${workspaceFolder}/test-asm/test6502.S",
                "-o",
                "${workspaceFolder}/test-asm/a.out"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        // Debug AVR backend module
        {
            "name": "(gdb) avr backend",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/vasmavr_oldstyle",
            "args": [
                "-Fbin",
                "${workspaceFolder}/test-asm/testavr.S",
                "-o",
                "${workspaceFolder}/test-asm/avr.out",
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        // Debug Intel Hex output module
        {
            "name": "(gdb) ihex",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/vasmavr_oldstyle",
            "args":[
                "-Fihex",
                "${workspaceFolder}/test-asm/testavr.S",
                "-o",
                "${workspaceFolder}/test-asm/out.hex"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}